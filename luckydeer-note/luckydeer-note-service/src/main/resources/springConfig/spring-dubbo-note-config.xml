<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd"
	default-autowire="byName">

	<!-- 开放服务 -->
	<dubbo:application name="noteInfoService" />

	<!-- 广播地址 端口 -->
	<dubbo:registry address="zookeeper://${note.service.url}:${note.service.port}"  />

	<dubbo:protocol name="dubbo" port="20881" />

	<!-- 开放的服务 接口 -->
	<dubbo:service interface="cn.luckydeer.note.facade.note.NoteInfoService"
		ref="noteInfoService" />

	<!-- 开放服务的实现类 -->
	<bean id="noteInfoService" class="cn.luckydeer.note.service.note.NoteInfoServiceImpl" />

</beans>